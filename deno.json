{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "strict": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-explicit-any",
        "ban-types",
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false,
    "singleQuote": false
  },
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read supabase/functions/bulk-sync-skus/index.ts"
  }
}